<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_list_template" name="Sale Orders List" xmlns:t="http://www.w3.org/1999/XSL/Transform">
        <t t-call="portal.portal_layout">
            <div id="wrap" class="container mt-4 mb-5">
                <div class="row align-items-center mb-4">
                    <div class="col-md-8">
                        <h2 class="display-5 fw-bold">Sales Orders</h2>
                        <p class="text-muted">Manage your quotations and orders from here.</p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <a href="/sales/orders/new" class="btn btn-primary shadow-sm">
                            <i class="fa fa-plus me-1"/> New Quotation
                        </a>
                    </div>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="table-responsive">
                        <t t:if="orders">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">Order #</th>
                                        <th>Customer</th>
                                        <th>Date</th>
                                        <th class="text-end">Total</th>
                                        <th class="text-center">Status</th>
                                        <th class="pe-4 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t:foreach="orders" t:as="order">
                                        <tr class="align-middle">
                                            <td class="ps-4"><strong><t t:esc="order.name"/></strong></td>
                                            <td><t t:esc="order.partner_id.name"/></td>
                                            <td><span t:esc="order.date_order" t:options='{"widget": "date"}'/></td>
                                            <td class="text-end">
                                                <span t:esc="order.amount_total"
                                                      t:options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                            </td>
                                            <td class="text-center">
                                                <span t:if="order.state == 'draft'" class="badge rounded-pill bg-secondary">Quotation</span>
                                                <span t:elif="order.state == 'sent'" class="badge rounded-pill bg-info">Sent</span>
                                                <span t:elif="order.state == 'sale'" class="badge rounded-pill bg-success">Confirmed</span>
                                                <span t:else="" class="badge rounded-pill bg-danger">Cancelled</span>
                                            </td>
                                            <td class="pe-4 text-center">
                                                <a t:att-href="'/sales/orders/%s' % order.id" class="btn btn-sm btn-outline-primary">View</a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t:else="">
                            <div class="text-center py-5">
                                <i class="fa fa-folder-open fa-3x text-muted mb-3"/>
                                <h4 class="text-muted">No orders found!</h4>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="user_profile_template" name="My Profile" xmlns:t="http://www.w3.org/1999/XSL/Transform">
        <t t-call="portal.portal_layout">
            <div id="wrap" class="container mt-5 mb-5">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card shadow border-0">
                            <div class="card-header border-0 p-0 position-relative" style="height: 150px; background: linear-gradient(90deg, #4e73df 0%, #224abe 100%);">
                                <div class="position-absolute top-100 start-50 translate-middle">
                                    <t t:if="employee.image_1920">
                                        <img t-att-src="image_data_uri(employee.image_1920)"
                                             class="rounded-circle border border-4 border-white bg-white shadow"
                                             style="width: 140px; height: 140px; object-fit: cover;"/>
                                    </t>
                                    <t t:else="">
                                        <div class="rounded-circle border border-4 border-white bg-light shadow d-flex align-items-center justify-content-center"
                                             style="width: 140px; height: 140px;">
                                            <i class="fa fa-user fa-4x text-muted"/>
                                        </div>
                                    </t>
                                </div>
                            </div>
                            <div class="card-body pt-5 mt-5 text-center">
                                <h3 class="fw-bold mb-0"><t t:esc="employee.name"/></h3>
                                <p class="text-muted mb-4"><t t:esc="employee.job_title or 'Position not set'"/></p>
                                <div class="row text-start mt-4 px-3">
                                    <div class="col-md-6 mb-3">
                                        <label class="text-uppercase small fw-bold text-muted">Email Address</label>
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-envelope text-primary me-2"/>
                                            <span class="text-dark"><t t:esc="employee.work_email or 'N/A'"/></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="text-uppercase small fw-bold text-muted">Department</label>
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-building text-primary me-2"/>
                                            <span class="text-dark"><t t:esc="employee.department_id.name or 'N/A'"/></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="error_template" name="Portal Error" xmlns:t="http://www.w3.org/1999/XSL/Transform">
        <t t-call="portal.portal_layout">
            <div id="wrap" class="container mt-5 text-center">
                <div class="alert alert-danger shadow-sm py-5">
                    <i class="fa fa-exclamation-triangle fa-3x mb-3"/>
                    <h3>Oops!</h3>
                    <p class="lead"><t t:esc="error"/></p>
                    <a href="/sales/orders" class="btn btn-primary mt-3">Return Home</a>
                </div>
            </div>
        </t>
    </template>
</odoo>